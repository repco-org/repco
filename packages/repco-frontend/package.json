{
  "private": true,
  "name": "repco-frontend",
  "version": "0.1.0",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:codegen build:css build:remix",
    "build:codegen": "graphql-codegen --config codegen.yml",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:codegen": "graphql-codegen --config codegen.yml --watch",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev:remix": "remix dev",
    "start": "dotenv -e .env -- remix-serve build"
  },
  "dependencies": {
    "@radix-ui/react-collapsible": "^1.0.1",
    "@radix-ui/react-dialog": "^1.0.2",
    "@radix-ui/react-dropdown-menu": "^2.0.2",
    "@radix-ui/react-icons": "^1.1.1",
    "@radix-ui/react-popover": "1.0.4",
    "@radix-ui/react-radio-group": "^1.1.1",
    "@radix-ui/react-separator": "^1.0.1",
    "@radix-ui/react-toast": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.0.3",
    "@remix-run/node": "^1.4.3",
    "@remix-run/react": "^1.4.3",
    "@remix-run/serve": "^1.4.3",
    "@urql/core": "^3.0.3",
    "@urql/exchange-graphcache": "^5.0.1",
    "autoprefixer": "^10.4.12",
    "chart.js": "^4.2.1",
    "class-variance-authority": "^0.3.0",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "graphql": "^15.8.0",
    "postcss": "^8.4.18",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-tooltip": "^5.8.3",
    "remix-auth": "^3.4.0",
    "remix-auth-socials": "^1.0.2",
    "sanitize-html": "^2.7.1",
    "urql": "^3.0.3"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.2.3",
    "@graphql-codegen/cli": "^2.16.5",
    "@graphql-codegen/typescript": "^2.8.8",
    "@graphql-codegen/typescript-operations": "^2.5.13",
    "@remix-run/dev": "^1.4.3",
    "@remix-run/eslint-config": "^1.4.3",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/sanitize-html": "^2.6.2",
    "autoprefixer": "^10.4.12",
    "tailwindcss": "^3.1.8"
  },
  "engines": {
    "node": ">=14"
  }
}
