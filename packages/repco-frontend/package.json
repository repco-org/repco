{
  "private": true,
  "name": "repco-frontend",
  "version": "0.1.0",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:codegen build:remix build:css",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "build:remix": "remix build",
    "build:codegen": "graphql-codegen --config codegen.yml",
    "dev:codegen": "graphql-codegen --config codegen.yml --watch",
    "dev": "run-p dev:*",
    "dev:remix": "concurrently \"yarn run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@radix-ui/react-collapsible": "^1.0.1",
    "@radix-ui/react-dropdown-menu": "^2.0.1",
    "@radix-ui/react-icons": "^1.1.1",
    "@radix-ui/react-select": "^1.1.1",
    "@remix-run/node": "^1.4.3",
    "@remix-run/react": "^1.4.3",
    "@remix-run/serve": "^1.4.3",
    "@urql/core": "^3.0.3",
    "@urql/exchange-graphcache": "^5.0.1",
    "autoprefixer": "^10.4.12",
    "class-variance-authority": "^0.3.0",
    "concurrently": "^7.4.0",
    "framer-motion": "^6",
    "graphql": "^15.8.0",
    "postcss": "^8.4.18",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icon": "^1.0.0",
    "react-icons": "^4.6.0",
    "react-select": "^5.5.2",
    "react-virtual": "^2.10.4",
    "sanitize-html": "^2.7.1",
    "tailwindcss": "^3.1.8",
    "urql": "^3.0.3"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.2.1",
    "@graphql-codegen/cli": "^2.12.0",
    "@graphql-codegen/typescript": "^2.7.3",
    "@graphql-codegen/typescript-operations": "^2.5.3",
    "@remix-run/dev": "^1.4.3",
    "@remix-run/eslint-config": "^1.4.3",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/sanitize-html": "^2.6.2"
  },
  "engines": {
    "node": ">=14"
  }
}
