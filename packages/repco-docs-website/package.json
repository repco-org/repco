{
  "private": true,
  "name": "repco-docs-website",
  "version": "0.1.0",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:css build:remix ",
    "build:remix": "remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "run-p dev:*",
    "dev:remix": "remix dev",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "start": "dotenv -e .env -- remix-serve build"
  },
  "dependencies": {
    "@remix-run/dev": "^1.12.0",
    "@remix-run/node": "^1.12.0",
    "@remix-run/react": "^1.12.0",
    "@remix-run/serve": "^1.12.0",
    "autoprefixer": "^10.4.13",
    "chokidar": "^3.5.3",
    "class-variance-authority": "^0.3.0",
    "clsx": "^1.2.1",
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3",
    "frontmatter": "^0.0.3",
    "graphql": "^15.8.0",
    "gray-matter": "^4.0.3",
    "meilisearch": "^0.31.1",
    "postcss": "^8.4.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.5",
    "rehype-raw": "^6.1.1",
    "rehype-stringify": "^9.0.3",
    "remark": "^14.0.2",
    "remark-gfm": "^3.0.1",
    "remark-mermaid-plugin": "^1.0.2",
    "remix-auth": "^3.4.0",
    "strip-markdown": "^5.0.0",
    "yarn-run-all": "^3.1.1"

  },
  "devDependencies": {
    "@remix-run/eslint-config": "^1.12.0",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/sanitize-html": "^2.6.2"
  },
  "engines": {
    "node": ">=14"
  }
}
