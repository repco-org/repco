model DataSource {
  uid       String   @id @unique
  pluginUid String
  repoDid   String
  config    Json?
  cursor    String?
  active    Boolean?

  SourceRecords SourceRecord[]
  Repo          Repo           @relation(fields: [repoDid], references: [did], onDelete: Cascade)
}

enum KeypairScope {
  INSTANCE
  REPO
}

model Keypair {
  did    String       @id @unique
  scope  KeypairScope
  name   String?
  secret String
}

model FailedDatasourceFetches {
  uri           String
  datasourceUid String
  timestamp     DateTime
  errorMessage  String
  errorDetails  Json?

  @@id([uri, datasourceUid])
}

model IngestError {
  id            String   @id @unique
  repoDid       String
  datasourceUid String
  kind          String
  cursor        String?
  sourceRecordId String?
  timestamp     DateTime
  errorMessage  String
  errorDetails  Json?
}

