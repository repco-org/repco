model Ucans {
  scope    String
  audience String
  resource String
  token    String
  cid      String @id @unique
}

model DataSource {
  uid       String   @id @unique
  pluginUid String
  config    Json?
  cursor    String?
  active    Boolean?

  SourceRecords SourceRecord[]
}

enum KeypairScope {
  INSTANCE
  REPO
}

model Keypair {
  did    String       @id @unique
  scope  KeypairScope
  name   String?
  secret String
}

